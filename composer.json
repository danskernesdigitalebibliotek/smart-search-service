{
    "name": "danskernesdigitalebibliotek/smart-search-service",
    "description": "Cover service imports for the danish libraries",
    "type": "project",
    "license": "AGPL-3.0-only",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-sqlite3": "*",
        "composer/package-versions-deprecated": "^1.11",
        "doctrine/annotations": "^1.11",
        "doctrine/doctrine-bundle": "^2.2",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.8",
        "neitanod/forceutf8": "^2.0",
        "symfony/console": "^6.1",
        "symfony/dotenv": "^6.1",
        "symfony/filesystem": "^6.1",
        "symfony/finder": "^6.1",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "^6.1",
        "symfony/http-client": "^6.1",
        "symfony/monolog-bundle": "^3.6",
        "symfony/proxy-manager-bridge": "^6.1",
        "symfony/twig-bundle": "^6.1",
        "symfony/yaml": "^6.1",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "^3.12",
        "friendsofphp/php-cs-fixer": "^3.8",
        "psalm/plugin-symfony": "^3.1",
        "symfony/browser-kit": "^6.1",
        "symfony/css-selector": "^6.1",
        "symfony/maker-bundle": "^1.26",
        "symfony/phpunit-bridge": "^6.1",
        "vimeo/psalm": "^4.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "docker-build": [
            "bin/console --env=prod assets:install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "coding-standards-check": [
            "php-cs-fixer --config=.php_cs.dist fix --dry-run --format=checkstyle"
        ],
        "coding-standards-apply": [
            "php-cs-fixer --config=.php_cs.dist fix"
        ],
        "psalm": [
            "./vendor/bin/psalm --show-info=true"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "6.1.*"
        }
    }
}
