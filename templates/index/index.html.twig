{% extends 'base.html.twig' %}

{% block title %}Smart Search Service{% endblock %}

{% block body %}
<header>
    <a id="logo" href="https://www.danskernesdigitalebibliotek.dk/"><img src="images/ddb-logo.png" alt="danskernesdigitalebibliotek.dk"></a>
</header>

<div class="information-container wrapper">
    <section>
        <div class="info">
            <hgroup class="main">
                <h2 class="title">Smart Search Service</h2>
            </hgroup>
            <div class="description">
                <div class="markdown">
                    <p>The service is provided by <a rel="noopener noreferrer" href="https://www.danskernesdigitalebibliotek.dk/">Danskernes Digitale Bibliotek</a></p>
                    <p><a rel="noopener noreferrer" href="https://www.gnu.org/licenses/agpl-3.0.en.html">GNU Affero General Public License</a></p>
                </div>
            </div>
        </div>
    </section>
</div>

<div class="api-container wrapper">
    <section>
        <div class="info">
            <h2 class="title">Generated files</h2>
            <ul>
            {% for link in links  %}
                <li><a href="{{ link.url }}" target="_blank">{{ link.name }}</a> (Last updated: {{ link.date|date("d. M H:i") }} / Size: {{ link.size }})</li>
            {% endfor %}
            </ul>
        </div>
    </section>
</div>
{% endblock %}
